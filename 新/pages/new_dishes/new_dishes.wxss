.box {
  width: 100%;
  min-height: 100%;
  position: fixed;
}

.form {
  width: 96%;
  margin-left: 2%;
  margin-top: 20rpx;
  min-height: 100%;
  position: absolute;
}

.form-text {
  border: 1px solid #bbb;
  width: 100%;
  height: 300rpx;
  margin-top: 10rpx;
  border-radius: 6rpx;
}

.form-button {
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #add8e6;
  color: #fff;
  position: fixed;
  bottom: 10rpx;
  border-radius: 10rpx;
}

.error {
  border: 1px solid red;
}

/* 星星 */

.star {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  /* background-color:#ccc; */
}

.star-item {
  width: 17%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  float: left;
}

.star-img {
  width: 80rpx;
  height: 80rpx;
}
.container1{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
}

.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}
.row text{
  flex-grow: 1;
  text-align: right;
}
.row input{
  font-size: 0.7rem;
  color: #ccc;
  flex-grow: 3;
  border: 1px solid #aaa;
  display: inline-block;
  border-radius: 6rpx;
  padding: 0.3rem;
}