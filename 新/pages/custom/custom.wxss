.container{
  background-color: #ADD8E6;
}
.userinfo{
    width: 100%;
    height: 15vh;
    background-color: #ADD8E6;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.userinfo-nickname {
    color: white;
    font-size: 0.7rem;
    font-family: "微软雅黑";
  }
.userinfo-avatar{
    background-size: cover;
    width: 100rpx;
    height: 100rpx;
    margin: 10rpx;
    border-radius: 50px;
}
.container1{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
  box-shadow: 0px 0px #0099CC;
}
.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}
.row text{
  flex-grow: 1;
  text-align: right;
}
.row input{
  font-size: 0.7rem;
  color: #ccc;
  flex-grow: 3;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}
.row button{
  padding: 0 2rem;
}